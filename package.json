{
  "name": "@foxglove/electron-socket",
  "private": false,
  "version": "2.1.0",
  "description": "Networking sockets for Electron apps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foxglove/electron-socket.git"
  },
  "author": {
    "name": "Foxglove",
    "email": "contact@foxglove.dev"
  },
  "homepage": "https://github.com/foxglove/electron-socket",
  "type": "commonjs",
  "exports": {
    "./main": {
      "import": "./dist/esm/main/index.js",
      "require": "./dist/cjs/main/index.js"
    },
    "./mainPreloader": {
      "import": "./dist/esm/preloader/PreloaderSocketsMain.js",
      "require": "./dist/cjs/preloader/PreloaderSocketsMain.js"
    },
    "./mainRenderer": {
      "import": "./dist/esm/renderer/SocketsMain.js",
      "require": "./dist/cjs/renderer/SocketsMain.js"
    },
    "./preloader": {
      "import": "./dist/esm/preloader/index.js",
      "require": "./dist/cjs/preloader/index.js"
    },
    "./renderer": {
      "import": "./dist/esm/renderer/index.js",
      "require": "./dist/cjs/renderer/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "del-cli -f dist",
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "build:app": "npm run install:app & npm run browserify:app",
    "install:app": "cd ./test/electron-app && npm install",
    "browserify:app": "npm run browserify:app:preload && npm run browserify:app:js && npm run browserify:app:isolated-js",
    "browserify:app:preload": "browserify -o ./test/electron-app/page-preload.bundle.js -x electron ./test/electron-app/page-preload.js",
    "browserify:app:js": "browserify -o ./test/electron-app/page.bundle.js -x electron ./test/electron-app/page.js",
    "browserify:app:isolated-js": "browserify -o ./test/electron-app/page-isolated.bundle.js -x electron ./test/electron-app/page-isolated.js",
    "run:app": "electron --disable-sandbox ./test/electron-app/app.js",
    "lint:ci": "eslint --report-unused-disable-directives .",
    "lint": "eslint --report-unused-disable-directives --fix .",
    "prepack": "yarn build",
    "prepublishOnly": "yarn lint:ci && yarn test",
    "test": "jest"
  },
  "dependencies": {
    "browserify": "^17.0.0",
    "del-cli": "^5.0.0",
    "dns-packet": "^5.2.4",
    "eventemitter3": "^4.0.7"
  },
  "peerDependencies": {
    "electron": "^22.1.0"
  },
  "devDependencies": {
    "@foxglove/eslint-plugin": "0.14.0",
    "@types/dns-packet": "5.2.2",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "esbuild": "0.12.20",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  }
}
